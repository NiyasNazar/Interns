<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

        android:background="#F4F3FA"
    tools:context=".Login">
    <ImageView
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/ILusername"
android:layout_centerHorizontal="true"
android:src="@drawable/login_logo"
        android:layout_width="200dp"
        android:layout_height="100dp" />
<android.support.design.widget.TextInputLayout
    android:id="@+id/ILusername"
    android:layout_marginLeft="70dp"
    android:layout_marginRight="70dp"
    app:hintTextAppearance="@style/TextLabel"
    android:layout_above="@+id/ILuserotp"
    android:hint="MOBILE NO"
  android:textColorHint="@color/colorblue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.design.widget.TextInputEditText
android:id="@+id/ed_mob"
        app:backgroundTint="#5964AD"
android:singleLine="true"
        android:inputType="number"

        android:backgroundTint="@color/colorblue"
        android:imeOptions="actionDone"

        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout

        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        app:hintTextAppearance="@style/TextLabel"
        android:layout_marginBottom="30dp"
        android:hint="OTP"
        android:textColorHint="@color/colorblue"
    android:id="@+id/ILuserotp"
        android:layout_above="@+id/btn_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:maxLength="4"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:digits="0123456789"
            android:singleLine="true"
android:backgroundTint="@color/colorblue"
            android:paddingLeft="10dp"
android:id="@+id/ed_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:alpha="0.9"
        android:layout_marginBottom="15dp"
android:layout_above="@id/frame_ll"
android:id="@+id/btn_otp"
        android:textColor="#FFFFFF"
        android:text="GET OTP"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/capsule_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/frame_ll"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    <ImageView
android:scaleType="fitXY"
     android:src="@drawable/login_bottom"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
        <Button
            android:alpha="0.9"
            android:textColor="#FFFFFF"
            android:text="GET STARTED"
android:id="@+id/get_started"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/capsule_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>
</RelativeLayout>