<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:background="@drawable/gradient_bg"
    android:layout_height="match_parent"
    tools:context=".Exams.Results_page">
    <LinearLayout
      android:layout_marginTop="25dp"

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_result"
        android:text="RESULT"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="#3FFF"
            android:layout_width="match_parent"
            android:layout_height="1.5px"></View>
<LinearLayout
android:layout_gravity="center"
    android:gravity="center"
android:layout_marginTop="25dp"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvq_tq"
        android:layout_marginBottom="5dp"
        android:text="Total Questions - "
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvq_totalquestions"

        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:text="RESULT"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
    <LinearLayout

        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvq_RA"

            android:layout_marginBottom="5dp"
            android:text="Right Answers - "
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvq_rightanswers"

            android:layout_marginBottom="4dp"
            android:layout_marginLeft="10dp"
            android:text="RESULT"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout

        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvq_WA"

            android:layout_marginBottom="5dp"
            android:text="Wrong Answers - "
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvq_wronganswers"

            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:text="RESULT"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:id="@+id/tvq_totalmarktext"

        android:layout_marginTop="35dp"
        android:textColor="#FFF"
        android:gravity="center"
        android:textSize="32sp"
        android:text="Total Mark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvq_totalmark"
        android:layout_marginTop="5dp"
        android:textColor="#FFF"
        android:gravity="center"
        android:textSize="32sp"
        android:text="135"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/donelayout"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_marginBottom="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="#3FFF"
            android:layout_width="match_parent"
            android:layout_height="1.5px"></View>
        <TextView
           android:id="@+id/tv_done"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="DONE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>