<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
   android:background="@color/bgcolor"
    tools:context=".Select_edu.Choose_Qualification">
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/colorblue"
        android:textSize="22sp"
        android:id="@+id/tv_select_edu"
        android:text="SELECT EDUCATION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/imv_topstrip"
        android:layout_below="@id/tv_select_edu"
        android:background="@drawable/reg_topstrip"
        android:layout_width="wrap_content"
        android:layout_height="35dp" />
    <LinearLayout

      android:layout_marginTop="175dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rec_listqualification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
   

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="142dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/edu_bottom_img" />
</RelativeLayout>
</ScrollView>