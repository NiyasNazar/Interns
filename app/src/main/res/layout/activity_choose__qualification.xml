<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
   android:background="@color/bgcolor"
    tools:context=".Select_edu.Choose_Qualification">
    <TextView
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/colorblue"
        android:textSize="22sp"
        android:id="@+id/tv_select_edu"
        android:text="SELECT EDUCATION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/imv_topstrip"
        android:layout_below="@id/tv_select_edu"
        android:background="@drawable/reg_topstrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout

      android:layout_marginTop="175dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.design.widget.TextInputLayout
android:padding="4dp"
        android:id="@+id/l1"

        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        app:hintTextAppearance="@style/TextLabel"

        android:hint="HIGH SCHOOL"
        android:textColorHint="@color/colorblue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:drawableRight="@drawable/ic_action_name"
            android:paddingBottom="20dp"
            app:backgroundTint="#5964AD"

            android:backgroundTint="@color/colorblue"

            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout

        android:id="@+id/l2"

        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        app:hintTextAppearance="@style/TextLabel"
android:padding="4dp"
        android:hint="HIGHER SECONDARY"
        android:textColorHint="@color/colorblue"
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:drawableRight="@drawable/ic_action_name"
            android:paddingBottom="20dp"
            app:backgroundTint="#5964AD"

            android:backgroundTint="@color/colorblue"

            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
android:padding="4dp"
        android:id="@+id/l3"

        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        app:hintTextAppearance="@style/TextLabel"

        android:hint="UNDER GRADUATE"
        android:textColorHint="@color/colorblue"
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"

        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:drawableRight="@drawable/ic_action_name"
            android:paddingBottom="20dp"
            app:backgroundTint="#5964AD"

            android:backgroundTint="@color/colorblue"

            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
android:padding="4dp"
        android:id="@+id/l4"

        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        app:hintTextAppearance="@style/TextLabel"
        android:layout_marginTop="3dp"


        android:hint="POST GRADUATE"
        android:textColorHint="@color/colorblue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            app:backgroundTint="#5964AD"

        android:drawablePadding="10dp"
            android:backgroundTint="@color/colorblue"
            android:drawableRight="@drawable/ic_action_name"
android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <ImageView
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="2dp"
android:background="@drawable/edu_bottom_img" android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="200dp" />
</RelativeLayout>